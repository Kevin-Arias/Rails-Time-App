

 <body>

	
	<div class="limiter main">
		<div class="container-login100">
			<div class="wrap-login100 p-t-85 p-b-20">
				<%= form_tag(sessions_path, class: "login100-form validate-form") do %>
				
					<span class="login100-form-title p-b-70">
						Welcome to
					</span>
					<span class="login100-form-avatar">
						<%= image_tag("ucsf.png") %>
					</span>
					<%if flash[:errors]%>
						<h4 class="text-danger">Please input valid credentials</h4>
					<%end%>

					<div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate = "Enter username">
						<%= email_field_tag(:email, '', class: "input100", placeholder: 'Email') %>
						
						<span class="focus-input100" data-placeholder=""></span>
					</div>

					<div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
						<%= password_field_tag(:password, '', class: "input100", placeholder: 'Password') %>

						
						<span class="focus-input100" data-placeholder=""></span>
					</div>

					<div class="container-login100-form-btn">
						<%= submit_tag "LOG IN", class: "login100-form-btn" %>
						
					</div>

					<h3><span>OR</span></h3>

					<div class="container-login100-form-btn2">
						<%= link_to "REGISTER NOW", "/users/new", class: "login100-form-btn2" %>
						
					</div>

					
				<%end%>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>


	
	
</body>




